{
  "name": "@p4ck493/ts-is",
  "version": "3.0.1-beta.3",
  "description": "The package for check some data in typescript and javascript.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepare:test": "npm run build && npm test",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json",
    "dev": "microbundle watch",
    "build": "microbundle",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p4ck493/ts-is.git"
  },
  "files": [
    "dist/**/*"
  ],
  "bugs": {
    "url": "https://github.com/p4ck493/ts-is/issues"
  },
  "homepage": "https://github.com/p4ck493/ts-is#readme",
  "keywords": [
    "Check Data",
    "TypeScript",
    "TS",
    "Proxy",
    "Checkers",
    "Testing"
  ],
  "author": "p4ck493",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "codelyzer": "^6.0.2",
    "jest": "^28.1.1",
    "jest-html-reporters": "^3.0.11",
    "microbundle": "^0.15.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.4.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.3"
  },
  "jest": {
    "verbose": false,
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/.git/",
      "<rootDir>/.DS_Store/",
      "<rootDir>/.vs/",
      "<rootDir>/.vscode/",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.test.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
